<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Sunshine Settings">

        <EditTextPreference
            android:key="location_preference"
            android:title="Location"
            android:summary="What's the weather forecast?"
            android:dialogTitle="Enter your post-code (9999, nz)" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Choose your prefered units">

        <ListPreference
            android:defaultValue="Metric"
            android:dialogTitle="My Prefered Units"
            android:entries="@array/entries_units_list_preferences"
            android:entryValues="@array/entryvalues_units_list_preferences"
            android:key="units_preference"
            android:summary="Select your prefered units"
            android:title="Select your units" />

    </PreferenceCategory>

</PreferenceScreen>